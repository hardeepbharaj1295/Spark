<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:background="#f5c641">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo_splash"
            android:id="@+id/imageView13" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Enter Archive PIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" android:layout_marginTop="16dp"
            android:textSize="22sp" android:textStyle="bold" android:textColor="#ffffff"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:id="@+id/linearLayout">
        <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_circle_no_fill_white"
                android:id="@+id/aFirstCircleImageView" android:layout_weight="1"/>
        <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_circle_no_fill_white"
                android:id="@+id/aSecondCircleImageView" android:layout_weight="1"/>
        <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_circle_no_fill_white"
                android:id="@+id/aThirdCircleImageView" android:layout_weight="1"/>
        <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_circle_no_fill_white"
                android:id="@+id/aFourthCircleImageView" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="1"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aOneTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/aTwoTextView"
            app:layout_constraintTop_toTopOf="@+id/aTwoTextView" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="2"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aTwoTextView" app:layout_constraintEnd_toStartOf="@+id/aThreeTextView"
            android:layout_marginEnd="9dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <TextView
            android:text="3"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aThreeTextView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/aTwoTextView"/>
    <TextView
            android:text="4"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aFourTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/aFiveTextView"
            app:layout_constraintTop_toTopOf="@+id/aFiveTextView" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="5"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aFiveTextView" app:layout_constraintEnd_toStartOf="@+id/aSixTextView"
            app:layout_constraintTop_toBottomOf="@+id/aTwoTextView"
            android:layout_marginEnd="9dp"/>
    <TextView
            android:text="6"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aSixTextView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aTwoTextView"/>
    <TextView
            android:text="7"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aSevenTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/aEightTextView"
            app:layout_constraintTop_toTopOf="@+id/aEightTextView" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="8"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aEightTextView" app:layout_constraintEnd_toStartOf="@+id/aNineTextView"
            app:layout_constraintTop_toBottomOf="@+id/aFiveTextView" android:layout_marginEnd="9dp"
    />
    <TextView
            android:text="9"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aNineTextView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/aEightTextView"/>
    <TextView
            android:text="0"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:textAlignment="center"
            android:id="@+id/aZeroTextView"
            app:layout_constraintTop_toBottomOf="@+id/aEightTextView"
            app:layout_constraintEnd_toEndOf="@+id/aEightTextView"
    />
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_back_space"
            android:id="@+id/aBackSpaceImageView"
            app:layout_constraintEnd_toEndOf="@+id/aSevenTextView"
            app:layout_constraintStart_toStartOf="@+id/aSevenTextView"
            app:layout_constraintTop_toTopOf="@+id/aZeroTextView"
            android:layout_marginTop="6dp"/>
    <TextView
            android:visibility="gone"
            android:text="Incorrect PIN. Try Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aIncorrectTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            android:textColor="#ffffff"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_drawer_opener_white"
            android:id="@+id/aDrawerOpenerImageView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>